<UserControl x:Class="DotNetProject.Views.CurrentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             mc:Ignorable="d">
    <Grid AllowDrop="True" DragEnter="Grid_DragEnter" Drop="Grid_Drop">
        <ContentControl VerticalAlignment="Top" HorizontalAlignment="Left" Name="Music" Content="{Binding MusicViewModel}" Visibility="Hidden"/>
        <ContentControl VerticalAlignment="Top" HorizontalAlignment="Left" Name="Video" Content="{Binding VideoViewModel}" Visibility="Hidden"/>
        <ContentControl VerticalAlignment="Top" HorizontalAlignment="Left" Name="Image" Content="{Binding ImageViewModel}" Visibility="Hidden"/>
        <ContentControl VerticalAlignment="Top" HorizontalAlignment="Left" Name="CurrentPlaylist" Content="{Binding CurrentPlaylistViewModel}" Visibility="Hidden"/>
        <ContentControl VerticalAlignment="Top" HorizontalAlignment="Left" Name="Playlist" Content="{Binding PlaylistViewModel}" Visibility="Hidden"/>
        <ContentControl VerticalAlignment="Top" HorizontalAlignment="Left" Name="Player" Content="{Binding PlayerViewModel}" />
    </Grid>
</UserControl>
